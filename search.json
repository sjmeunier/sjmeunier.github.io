---
---
{
	{% assign left = "{" %}
	{% assign right = "}" %}

    {% for entry in site.posts %}
	"{{ entry.url | slugify }}":
        {
            "title": "{{ entry.title | xml_escape }}",
            "url": "{{ entry.url | xml_escape }}",
            "summary": "{{ entry.content | strip_html | strip_newlines | truncatewords(50) | remove: left | remove: right | remove: "*" | remove: "(" | remove: ")" | replace("?", ".") | remove: "@" | xml_escape }}",
			"date": "{{ entry.date | date_to_string }}",
			"categories": "{% for category in entry.categories %}{{ category }}{% unless forloop.last %}, {% endunless %}{% endfor %}"
        }
		{% unless forloop.last %},{% endunless %}
    {% endfor %}
}